@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4 ">All Comic Information</h1>
</div>
<hr />
<button class="btn btn-dark" data-toggle="modal" data-target="#add">Add New Comic</button>
<hr />
<!-- Table For Display Comic Details-->
<div id="table_details">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Comic Name</th>
                <th>Price</th>
                <th>Pages</th>
                <th colspan="2" align="center">Operations</th>
            </tr>
        </thead>
        <tbody id="table_comics">
            <tr>
                <td colspan="5" align="center">No Comic information</td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Add Modal Dialog Box -->
<div class="modal" tabindex="-1" role="dialog" id="add">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title ">Add Comic Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="comicname">Enter Comic Name: </label>
                        <input type="text" class="form-control" id="comicname">
                    </div>
                    <div class="form-group">
                        <label for="price">Enter Price: </label>
                        <input type="number" class="form-control" id="price">
                    </div>
                    <div class="form-group">
                        <label for="pages">Enter Pages: </label>
                        <input type="number" class="form-control" id="pages">
                    </div>
                    <div class="form-group" id="result">

                    </div>
                    <button type="button" onclick="addComic()" class="btn btn-dark">Add New Comic</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

<!-- Edit Modal Box -->
<div class="modal" tabindex="-1" role="dialog" id="update">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Comic Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>

                    <div class="form-group">
                        <input type="hidden" class="form-control" id="id">
                    </div>
                    <div class="form-group">
                        <label for="comicname1">Enter Comic Name: </label>
                        <input type="text" class="form-control" id="comicname1">
                    </div>
                    <div class="form-group">
                        <label for="price1">Enter Price: </label>
                        <input type="number" class="form-control" id="price1">
                    </div>
                    <div class="form-group">
                        <label for="pages1">Enter Pages: </label>
                        <input type="number" class="form-control" id="pages1">
                    </div>
                    <div class="form-group" id="resultUpdate">

                    </div>
                    <button type="button" onclick="updateComic()" class="btn btn-dark">Edit Comic Details</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal Dialog Ends -->

@section Scripts{
    <script src="~/js/allscript.js"></script>
    <script>
        $(document).ready(function () {
            loadComics();
        });
    </script>
}